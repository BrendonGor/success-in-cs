---
const { title = "Opinion", idSuffix = "" } = Astro.props;
// also tried https://stackoverflow.com/questions/73879494/import-bootstrap-in-astro
---
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<style>
  .collapse-button {
    color: gold;
    border-color: gold;
    /* background-color: transparent; */
  }

  .collapse-content {
    border: 1px solid gold;
    padding: 0.5rem;
  }
</style>
<!-- <div class = "not-content"> -->
<button class="btn collapse-button" type="button" data-bs-toggle="collapse" data-bs-target={`#collapseContent${idSuffix}`} aria-expanded="false" aria-controls={`collapseContent${idSuffix}`}>
  {title}
</button>
<div id={`collapseContent${idSuffix}`} class="collapse collapse-content">
  <slot />
</div>
<!-- </div> -->